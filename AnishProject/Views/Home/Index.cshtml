@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="text-center">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>BullFlix - Home</title>
        <link rel="stylesheet" href="css/styles.css">
        <style>
            footer {
                margin-top: auto; /* Footer sticks to the bottom */
                background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
                color: white;
                text-align: center;
                padding: 20px;
            }

            }
            .container
            {
                float:left!important;
                margin:0;
            }

            .features ul {
                margin: 0; /* Remove default list margin (optional) */
            }
            ul {
                list-style: disc inside; /* Or any other list-style-type */
                font:bold;
            }
            .li
            {
                width:fit-content;
            }
        </style>
    </head>
    <main class="main">
            <div>
                <section class="hero">
                    <h2>Your Guide to Bull-tastic Entertainment</h2>
                    <p>Discover the best movies, TV shows, and documentaries recommended by Bulls!</p>
                </section>
                <section class="features">
                    <h2>Features</h2>
                    <ul>
                        <li>Curated recommendations</li>
                        <li>Bull-themed ratings</li>
                        <li>User-friendly interface</li>
                    </ul>
                </section>
            </div>
    </main>
</div>
